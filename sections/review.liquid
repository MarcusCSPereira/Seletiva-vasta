{% schema %}
{
  "name": "Customer Reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Real Reviews, Real Experiences"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "With 1600+ 5-star reviews"
    },
    {
      "type": "range",
      "id": "total_pages",
      "label": "Total Pages",
      "min": 1,
      "max": 30,
      "default": 30
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "image_picker",
          "id": "person_image",
          "label": "Person Image (Recommended size: 215x306px)"
        },
        {
          "type": "text",
          "id": "person_name",
          "label": "Person Name",
          "default": "John B."
        },
        {
          "type": "text",
          "id": "person_location",
          "label": "Person Country",
          "default": "United States"
        },
        {
          "type": "range",
          "id": "stars",
          "label": "Stars Number",
          "min": 1,
          "max": 5,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Review Text",
          "default": "Lorem ipsum dolor sit amet consectetur. Volutpat fames diam volutpat a. Ultricies lacinia eu cras massa odio."
        }
      ]
    }
  ],
  "max_blocks": 30,
  "presets": [
    {
      "name": "Customer Reviews"
    }
  ]
}
{% endschema %}
