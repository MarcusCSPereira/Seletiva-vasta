{{ 'review.css' | asset_url | stylesheet_tag }}

<section class="review-section scroll-reveal">
    <div class="review-header scroll-reveal">
        <h2 class="review-title scroll-reveal">{{ section.settings.title }}</h2>
        <div class="review-subtitle scroll-reveal">
            <p>{{ section.settings.subtitle }}</p>
            <div class="stars">
                {% for i in (1..5) %}
                    <span class="star glowing-star">&#9733;</span>
                {% endfor %}
            </div>
        </div>
    </div>
    
    <div class="review-container scroll-reveal">
        {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
                <div class="review-card scroll-reveal">
                    <img src="{% if block.settings.person_image %}{{ block.settings.person_image | image_url }}{% else %}{{ 'person-1.svg' | asset_url }}{% endif %}" 
                         alt="{{ block.settings.person_name }}" class="review-image" width="215" height="306">
                    <div class="review-content">
                        <h3 class="review-name">{{ block.settings.person_name }}</h3>
                        <p class="review-location">{{ block.settings.person_location }}</p>
                        <div class="stars">
                            {% for i in (1..5) %}
                                {% if i <= block.settings.stars %}
                                    <span class="star glowing-star">&#9733;</span>
                                {% else %}
                                    <span class="star star-empty">&#9734;</span>
                                {% endif %}
                            {% endfor %}
                        </div>
                        <p class="review-comment">{{ block.settings.review_text }}</p>
                        <div class="review-divider"></div>
                        <div class="review-product">
                            <img src="{{ 'review-base-product.svg' | asset_url }}" alt="Product Name" class="review-product-image" width="38" height="28">
                            <p class="product-name">Product Name</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
