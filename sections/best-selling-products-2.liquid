{{ 'best-selling-products.css' | asset_url | stylesheet_tag }}

<section class="best-selling-products">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    <div class="products-container">
        {% for block in section.blocks %}
            <div class="product-card">
                <div class="product-image">
                    <img src="{% if block.settings.image %}{{ block.settings.image | image_url }}{% else %}{{ 'placeholder-product.svg' | asset_url }}{% endif %}" 
                         alt="{{ block.settings.product_name }}" width="274" height="304">
                </div>
                <div class="product-content">
                    <h3 class="product-name">{{ block.settings.product_name }}</h3>
                    <div class="product-rating">
                        <div class="stars">
                            {% for i in (1..5) %}
                                {% if i <= block.settings.stars %}
                                    <img src="{{ 'star-group1.svg' | asset_url }}" alt="Star" width="15" height="15">
                                {% else %}
                                    <img src="{{ 'star-empty.svg' | asset_url }}" alt="Star" width="15" height="15">
                                {% endif %}
                            {% endfor %}
                        </div>
                        <p class="review-text">({{ block.settings.rating }} of {{ block.settings.total_reviews }} Reviews)</p>
                    </div>
                </div>
            </div>
        {% else %}
            <!-- Produtos Padrão -->
            <div class="product-card">
                <div class="product-image">
                    <img src="{{ 'default-product-5.svg' | asset_url }}" alt="Product" width="274" height="304">
                </div>
                <div class="product-content">
                    <h3 class="product-name">Product Name</h3>
                    <div class="product-rating">
                        <div class="stars">
                            {% for i in (1..5) %}
                                <img src="{{ 'star-group1.svg' | asset_url }}" alt="Star" width="15" height="15">
                            {% endfor %}
                        </div>
                        <p class="review-text">(5.0 of 800 Reviews)</p>
                    </div>
                </div>
            </div>
            <div class="product-card">
                <div class="product-image">
                    <img src="{{ 'default-product-6.svg' | asset_url }}" alt="Product" width="274" height="304">
                </div>
                <div class="product-content">
                    <h3 class="product-name">Product Name</h3>
                    <div class="product-rating">
                        <div class="stars">
                            {% for i in (1..5) %}
                                <img src="{{ 'star-group1.svg' | asset_url }}" alt="Star" width="15" height="15"> 
                            {% endfor %}
                        </div>
                        <p class="review-text">(4.8 of 650 Reviews)</p>
                    </div>
                </div>
            </div>
            <div class="product-card">
                <div class="product-image">
                    <img src="{{ 'default-product-7.svg' | asset_url }}" alt="Product" width="274" height="304">
                </div>
                <div class="product-content">
                    <h3 class="product-name">Product Name</h3>
                    <div class="product-rating">
                        <div class="stars">
                            {% for i in (1..5) %}
                                <img src="{{ 'star-group1.svg' | asset_url }}" alt="Star" width="15" height="15"> 
                            {% endfor %}
                        </div>
                        <p class="review-text">(5.0 of 800 Reviews)</p>
                    </div>
                </div>
            </div>
            <div class="product-card">
                <div class="product-image">
                    <img src="{{ 'default-product-8.svg' | asset_url }}" alt="Product" width="274" height="304">
                </div>
                <div class="product-content">
                    <h3 class="product-name">Product Name</h3>
                    <div class="product-rating">
                        <div class="stars">
                            {% for i in (1..5) %}
                                <img src="{{ 'star-group1.svg' | asset_url }}" alt="Star" width="15" height="15"> 
                            {% endfor %}
                        </div>
                        <p class="review-text">(5.0 of 800 Reviews)</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>

{% schema %}
{
  "name": "Best Selling Products 2",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "You May Also Like"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Produto",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagem do Produto (Tamanho recomendado: 274x304px)"
        },
        {
          "type": "text",
          "id": "product_name",
          "label": "Nome do Produto",
          "default": "Product Name"
        },
        {
          "type": "range",
          "id": "stars",
          "label": "Número de Estrelas",
          "min": 1,
          "max": 5,
          "default": 5
        },
        {
          "type": "text",
          "id": "rating",
          "label": "Nota Média",
          "default": "5.0"
        },
        {
          "type": "text",
          "id": "total_reviews",
          "label": "Total de Avaliações",
          "default": "800"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Best Selling Products 2"
    }
  ]
}
{% endschema %}
